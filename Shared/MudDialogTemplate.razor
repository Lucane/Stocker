@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton hidden="@DisableCancelButton" OnClick="Cancel">Cancel</MudButton>
        <MudButton hidden="@DisableOkButton" Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string ContentText { get; set; }
    [Parameter] public bool DisableCancelButton { get; set; } = false;
    [Parameter] public bool DisableOkButton { get; set; } = false;

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}